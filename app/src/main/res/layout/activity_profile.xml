<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ProfileActivity">

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/profile"/>

    <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="정지용"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/profileImage"
            android:textSize="30dp"
            android:textColor="#000000"/>

    <LinearLayout
            android:id="@+id/information"
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="90dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="230"
                      android:textSize="25dp"
                      android:textColor="#fd5765"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="     일"/>
        </LinearLayout>

        <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="21"
                      android:textSize="25dp"
                      android:textColor="#fd5765"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="제자"/>
        </LinearLayout>

        <View android:layout_width="1dp"
              android:layout_height="60dp"
              android:background="@android:color/darker_gray"
              android:layout_marginStart="20dp"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text=" 1"
                      android:textSize="25dp"
                      android:textColor="#fd5765"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="재능"/>
        </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="20dp"/>

        <LinearLayout android:layout_width="61dp"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="20dp"
                      android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="849"
                      android:textSize="25dp"
                      android:textColor="#fd5765"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:text="  하트"/>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/talentButton"
            android:layout_below="@id/information"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:layout_marginTop="15dp"
            android:text="나의 재능 나눔"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#fd5765"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    <TextView
            android:id="@+id/recent"
            android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            android:text="최근 구경한 클래스"
            android:textColor="#fd5765"
            android:layout_marginTop="20dp"
            android:layout_below="@id/talentButton"
            android:layout_marginStart="30dp"/>

    <ImageView
            android:id="@+id/sample1"
            android:layout_below="@id/recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/listsample1"/>

    <ImageView
            android:id="@+id/sample2"
            android:layout_below="@id/sample1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/listsample2"/>

    <ImageView
            android:id="@+id/sample3"
            android:layout_below="@id/sample2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/listsample3"/>

    <ImageView
            android:id="@+id/sample4"
            android:layout_below="@id/sample3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/listsample4"/>

    <ImageView
            android:id="@+id/sample5"
            android:layout_below="@id/sample4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/listsample5"/>

    </RelativeLayout>

</ScrollView>