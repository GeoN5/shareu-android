<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.RegisterActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="360">

        <android.support.design.widget.TextInputLayout
                android:id="@+id/emailTextLayout"
                android:layout_above="@+id/passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/emailText"
                    android:inputType="textEmailAddress"
                    android:hint="이메일을 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordTextLayout"
                android:layout_above="@+id/rePasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/passwordText"
                    android:inputType="textPassword"
                    android:hint="비밀번호를 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/repasswordTextLayout"
                android:layout_above="@id/lastNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/rePasswordText"
                    android:inputType="textPassword"
                    android:hint="비밀번호를 다시 입력해주세요."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/firstNameTextLayout"
                android:layout_above="@id/lastNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/firstNameText"
                    android:inputType="text"
                    android:hint="성"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/lastNameTextLayout"
                android:layout_below="@+id/firstNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/lastNameText"
                    android:inputType="text"
                    android:hint="이름"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/sexTextLayout"
                android:layout_below="@id/lastNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/sexText"
                    android:inputType="text"
                    android:hint="성별"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/ageTextLayout"
                android:layout_below="@id/sexText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/ageText"
                    android:inputType="number"
                    android:hint="나이"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/phoneTextLayout"
                android:layout_below="@id/ageText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp">
            <android.support.design.widget.TextInputEditText
                    android:id="@+id/phoneText"
                    android:inputType="phone"
                    android:hint="핸드폰 번호"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    <TextView
            android:id="@+id/choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_below="@id/phoneText"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Young &amp; Old"/>

    <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_below="@id/choice"
            android:layout_above="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp">
    <RadioButton
            android:id="@+id/youngButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Young"
            android:layout_marginBottom="10dp"/>
    <RadioButton
            android:id="@+id/oldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old"/>
    </RadioGroup>

    <Button android:id="@+id/registerButton"
            android:layout_below="@+id/radioGroup"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="#fd5765"
            android:text="회원가입"
            android:textColor="#ffffff"
            android:textSize="20dp"/>

    </LinearLayout>

</ScrollView>

