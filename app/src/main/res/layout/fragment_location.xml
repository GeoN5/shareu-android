<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".fragment.LocationFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <LinearLayout 
                android:id="@+id/spinnerTab"
                android:layout_width="match_parent"
                      android:layout_marginTop="20dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

            <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/spinner1"
                    android:layout_marginEnd="20dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 구경한 클래스"
                android:textColor="#fd5765"
                android:layout_marginTop="20dp"
                android:layout_below="@id/spinnerTab"
                android:layout_marginStart="30dp"/>

        <ImageView
                android:id="@+id/sample1"
                android:layout_below="@id/recent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/listsample1"/>

        <ImageView
                android:id="@+id/sample2"
                android:layout_below="@id/sample1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/listsample2"/>

        <ImageView
                android:id="@+id/sample3"
                android:layout_below="@id/sample2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/listsample3"/>

        <ImageView
                android:id="@+id/sample4"
                android:layout_below="@id/sample3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/listsample4"/>

        <ImageView
                android:id="@+id/sample5"
                android:layout_below="@id/sample4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/listsample5"/>
    </RelativeLayout>

</ScrollView>