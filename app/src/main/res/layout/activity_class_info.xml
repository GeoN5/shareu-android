<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.ClassInfoActivity">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

    <TextView
            android:id="@+id/by"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:text="by"
            android:textSize="15dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/name"
            android:layout_toEndOf="@+id/by"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginStart="3dp"
            android:text="기타장인 할머니"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <View
            android:id="@+id/view1"
            android:layout_width="140dp"
            android:layout_height="2dp"
            android:background="#fd5765"
            android:layout_below="@id/name"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/name"/>

    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="45dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/view1"
            android:layout_centerHorizontal="true"
            android:text="통기타를 일렉처럼!\n띵가띵가띵~"/>

    <LinearLayout
            android:id="@+id/tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/first"
                android:text="클래스 소개"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/second"
                android:text="일정 및 장소"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/third"
                android:text="평 가"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <View android:id="@+id/view2"
          android:layout_width="100dp"
          android:layout_height="2dp"
          android:background="#fd5765"
          android:layout_below="@id/tab"
          android:layout_marginTop="10dp"
          android:layout_marginStart="150dp"/>

    <TextView
            android:id="@+id/infoText"
            android:layout_below="@id/view2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textSize="15dp"
            android:text="일   정: 2019년 4월 20일 ~ 6월 20일 (10주차)\n\n시   간: 15:00 ~ 17:00\n\n장   소: 서울특별시 관악구 서울대학교 SK상생혁신센터\n\n연락처: 010-9524-9207\n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/map"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/infoText"
            android:src="@drawable/map"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="18dp"
                android:background="#fd5765"
                android:src="@drawable/call"
                android:layout_below="@id/map"
                android:layout_marginTop="18dp"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/accessButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="10dp"
                android:background="#fd5765"
                android:textColor="#ffffff"
                android:layout_below="@id/fab"
                android:layout_alignParentBottom="true"
                android:textSize="20dp"
                android:text="클래스 수강하기"/>

    </RelativeLayout>

</ScrollView>