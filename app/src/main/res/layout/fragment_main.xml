<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragment.MainFragment">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/main1"
                android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                android:src="@drawable/mainsample1"/>
        <TextView
                android:id="@+id/title1"
                android:layout_below="@id/main1"
                android:layout_marginStart="30dp"
                android:textSize="15dp"
                android:text="기타장인 할머니"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/content1"
                android:layout_below="@id/title1"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="30dp"
                android:text="통기타를 일렉기타처럼! 띵가띵가띵~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>


        <ImageView
                android:id="@+id/main2"
                android:layout_width="match_parent"
                android:layout_below="@id/content1"
                android:layout_height="wrap_content"
                android:src="@drawable/mainsample2"/>
        <TextView
                android:id="@+id/title2"
                android:layout_below="@id/main2"
                android:layout_marginStart="30dp"
                android:textSize="15dp"
                android:text="빌리 아저씨"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/content2"
                android:layout_below="@id/title2"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="30dp"
                android:text="내 나이 70세, 노인정 인기남!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        <ImageView
                android:id="@+id/main3"
                android:layout_width="match_parent"
                android:layout_below="@id/content2"
                android:layout_height="wrap_content"
                android:src="@drawable/mainsample3"/>
        <TextView
                android:id="@+id/title3"
                android:layout_below="@id/main3"
                android:layout_marginStart="30dp"
                android:textSize="15dp"
                android:text="단소부는 노신사"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/content3"
                android:layout_below="@id/title3"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="30dp"
                android:text="피리부는 사나이 빰치는 단소부는 노신사"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        <ImageView
                android:id="@+id/main4"
                android:layout_width="match_parent"
                android:layout_below="@id/content3"
                android:layout_height="wrap_content"
                android:src="@drawable/mainsample4"/>
        <TextView
                android:id="@+id/title4"
                android:layout_below="@id/main4"
                android:layout_marginStart="30dp"
                android:textSize="15dp"
                android:text="조각가할아버지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/content4"
                android:layout_below="@id/title4"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginStart="30dp"
                android:text="서걱서걱, 내가 바로 조물주"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</ScrollView>